Uploading my cpp task
//write a c++ program to check if a person is eligible to vote or not
#include<iostream>
using namespace std;

int main() {

    int age;
    cout << "Enter age of a user:";
    cin>>age;

    if (age >= 18) {
        cout << "You are eligible for voting";
    } else {
        cout << "You are not eligible for voting";
    }

    return 0;
}
